{
  "name": "@osolmaz/wd-cli",
  "version": "0.1.0",
  "description": "Native TypeScript CLI for exploring and querying Wikidata",
  "type": "module",
  "files": [
    "dist",
    "skills",
    "README.md"
  ],
  "bin": {
    "wd-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format esm --dts --clean",
    "build:test": "tsc -p tsconfig.test.json",
    "test": "npm run build:test && node --test dist-test/test/*.test.js",
    "prepare": "husky",
    "precommit": "npm exec -- lint-staged && npm run -s build",
    "prepack": "npm run build",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src test --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "release-it",
    "release:ci": "release-it --ci"
  },
  "keywords": [
    "wikidata",
    "cli",
    "typescript",
    "knowledge-graph",
    "sparql"
  ],
  "author": "Onur Solmaz <info@solmaz.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osolmaz/wd-cli.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "skillflag": "^0.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
